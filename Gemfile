# A sample Gemfile
source "https://rubygems.org"

# Guard: Watches project for compiling changes
gem 'guard'
gem 'rb-fsevent'

# Notification Center Plugin for Guard
gem 'terminal-notifier-guard'

# Mirror: Copy resources to the build directory
gem 'guard-mirror'

# Compass: Converts SASS to CSS
gem 'guard-compass'
gem 'compass-normalize'

# Handlebars: Compiles Handlebars Templates
gem 'guard-handlebars', :git => 'https://github.com/81designs/guard-handlebars.git'

# JSHint: Validates JavaScript
gem 'guard-jshint-node'

# Jammit: Compiles and Compresses JS
gem 'guard-jammit'
gem "uglifier", :git => "https://github.com/lautis/uglifier.git"

# Jasmine: BDD Testing for JavaScript
gem 'guard-jasmine-headless-webkit'

# Webrick: Starts a webrick server
gem 'guard-webrick'